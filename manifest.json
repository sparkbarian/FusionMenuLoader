{
  "manifest_version": 3,
  "name": "Menu Icon Overlay",
  "version": "1.0",
  "description": "Displays a menu icon overlay on the top left of the page.",
  "permissions": ["scripting"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Show Menu Overlay"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
